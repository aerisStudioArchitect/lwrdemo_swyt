<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="imageUrl" type="String" label="Product Image URL or Expression" />
            <property name="defaultImgUrl" type="String" label="Default Image URL or Expression" default="/img/b2b/default-product-image.svg"/>
            <property name="defaultColor" type="Color" label="Default Button Color" description="Default color of the button"/>
            <property name="addedColor" type="Color" label="Selected Button Color" description="Color of the button when selected" default="#FF0000"/>
            <property name="iconBkgColor" type="Color" label="Wishlist Icon Background Color" />
            <property name="showWishlistIcon" type="Boolean" label="Show Wishlist Icon"/>
            <property name="buttonPosition" type="String" default="4" datasource="1,2,3,4" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>